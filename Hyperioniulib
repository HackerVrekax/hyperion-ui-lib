            end
            
            function groupbox:CreateLabel(text, wrap, idx)
                local label = {}
                label.Text = text
                label.Wrap = wrap or false
                
                label.Label = Instance.new("TextLabel")
                label.Label.Name = (idx or "Label") .. "Label"
                label.Label.Size = UDim2.new(1, 0, 0, label.Wrap and 0 or 22)
